<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/station_info_layout"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
			    android:id="@+id/title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="Name"
			    android:textStyle="bold" />
			<TextView
			    android:id="@+id/marker_label1"
			    android:layout_below="@+id/title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="Stadium:"
			    android:textStyle="bold" />

            <TextView
                android:id="@+id/marker_label2"
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/title"             
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_toRightOf="@+id/marker_label1"
                android:text="Lableldjdkfsdhfksdjhfskd" />
            
            
            
            <TextView
			    android:id="@+id/year_title"
			    android:layout_below="@+id/marker_label1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="Year:"
			    android:textStyle="bold" />
            
            <TextView
			    android:id="@+id/year"
			    android:layout_toRightOf="@+id/year_title"
			    android:layout_below="@+id/marker_label2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:text="2014"
			    android:textColor="@color/red"
			    android:textStyle="bold" />

            

            <TextView
        android:id="@+id/snippet_label1"
        android:layout_below="@+id/year_title"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Scotland Participated:" />
            
            <TextView
        android:id="@+id/snippet_label"
        android:layout_toRightOf="@+id/snippet_label1"
        android:layout_below="@+id/year"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
         android:textColor="@color/red"
        android:text="another lable" />

    <Button
        android:background="@drawable/diary_normal"
        android:layout_marginTop="3dp"
        android:layout_below="@id/snippet_label1"
        android:id="@+id/show_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
         />
    </RelativeLayout>

    

</RelativeLayout>

